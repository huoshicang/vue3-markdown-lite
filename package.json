{
  "name": "vue3-markdown-lite",
  "version": "1.0.0",
  "description": "适合在 Vue3 项目中快速集成 Markdown 渲染。",
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "cross-env BUILD_LIB=true vite build",
    "preview": "vite preview",
    "docs:dev": "vitepress dev docs",
    "docs:build": "cross-env VITE_MY_ENV=production vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "publish:npm": "npm publish --access public",
    "release": "npm run build && npm run publish:npm"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vue3",
    "markdown",
    "viewer",
    "component"
  ],
  "author": "离无歌",
  "license": "MIT",
  "dependencies": {
    "@mdit/plugin-alert": "^0.22.3",
    "@mdit/plugin-align": "^0.22.2",
    "@mdit/plugin-container": "^0.22.2",
    "@mdit/plugin-figure": "^0.22.2",
    "@mdit/plugin-img-lazyload": "^0.22.1",
    "@mdit/plugin-img-size": "^0.22.3",
    "@mdit/plugin-katex": "^0.23.2",
    "@mdit/plugin-mark": "^0.22.1",
    "@mdit/plugin-spoiler": "^0.22.2",
    "@mdit/plugin-sub": "^0.22.2",
    "@mdit/plugin-sup": "^0.22.2",
    "@mdit/plugin-tasklist": "^0.22.2",
    "@tailwindcss/vite": "^4.1.15",
    "@vitejs/plugin-vue-jsx": "^4.2.0",
    "@vscode/markdown-it-katex": "^1.1.2",
    "@vue/reactivity": "^3.5.22",
    "echarts": "^6.0.0",
    "highlight.js": "^11.10.0",
    "html2pdf.js": "^0.12.1",
    "lit-html": "^3.3.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-echarts": "^0.1.3",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-toc-done-right": "^4.2.0",
    "mermaid": "^11.12.1",
    "mermaid-it-markdown": "^1.0.10",
    "shiki": "^3.14.0",
    "tailwindcss": "^4.1.15",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-vue": "^5.2.4",
    "daisyui": "^5.3.7",
    "less": "^4.4.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.9.1",
    "vitepress": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huoshicang/vue3-markdown-lite.git"
  },
  "bugs": {
    "url": "https://github.com/huoshicang/vue3-markdown-lite/issues"
  },
  "homepage": "https://github.com/huoshicang/vue3-markdown-lite#readme"
}
